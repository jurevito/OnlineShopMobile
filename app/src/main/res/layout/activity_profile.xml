<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!-- nav bar -->
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"/>
    <Button
            android:text="@string/store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/store"
            app:layout_constraintStart_toStartOf="@+id/toolbar"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cart" app:layout_constraintTop_toTopOf="@+id/cart"/>
    <Button
            android:text="@string/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login" app:layout_constraintEnd_toEndOf="@+id/toolbar" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/cart"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"/>
    <Button
            android:text="@string/cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cart"
            app:layout_constraintTop_toTopOf="@+id/toolbar" app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toEndOf="@+id/store" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/login" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/cart" android:textSize="24sp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView10"
            android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameView" android:textSize="18sp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addressView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/emailView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/addressView"
            android:textSize="18sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">
        <Button
                android:text="Logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/btnLogout" android:layout_weight="0.5"/>

        <Button
                android:text="Edit Profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/btnEdit" android:layout_weight="0.5"/>
    </LinearLayout>

    <!-- content -->



</androidx.constraintlayout.widget.ConstraintLayout>